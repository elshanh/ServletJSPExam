CREATE DATABASES LANG;

CREATE TABLE `USER` (
  `ID` int DEFAULT NULL,
  `NAME` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `SURNAME` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `USERNAME` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `PASSWORD` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `STATE` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `STATUS` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COLLATE=utf8_turkish_ci;

CREATE TABLE `SENTENCE` (
  `ID` int DEFAULT NULL,
  `SENTENCE` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `LANG` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `TRANSLATE_AZ` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `TRANSLATE_TR` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COLLATE=utf8_turkish_ci;

CREATE TABLE `NOTE` (
  `ID` int DEFAULT NULL,
  `LANG` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `NOTE` varchar(2000) COLLATE utf8_turkish_ci DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COLLATE=utf8_turkish_ci;

CREATE TABLE `WORD` (
  `ID` int DEFAULT NULL,
  `WORD_ENG` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `SPEAK_ENG` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `WORD_GER` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `SPEAK_GER` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `WORD_RUS` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `SPEAK_RUS` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `TRANSLATE_AZ` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL,
  `TRANSLATE_TR` varchar(100) COLLATE utf8_turkish_ci DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COLLATE=utf8_turkish_ci;

CREATE TABLE `GENERATE_ID` (
  `ID` int DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COLLATE=utf8_turkish_ci;


INSERT INTO LANG.GENERATE_ID (ID) VALUES(1);

